<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/bac"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_alignParentRight="true"
        android:id="@+id/gridLayout"
        android:orientation="horizontal"
        android:background="@drawable/layout_bg"
        android:color="#676565"
        android:layout_alignLeft="@+id/gridLayout2"
        android:layout_alignStart="@+id/gridLayout2">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/likeb"
            android:layout_marginLeft="5dp"
            android:background="@drawable/heart"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_row="0"
            android:layout_column="0" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/unlikeb"
            android:background="@drawable/blanheart"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:layout_marginLeft="5dp"
            android:focusableInTouchMode="true"
            android:layout_row="0"
            android:layout_column="0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="87"
            android:textColor="#000000"
            android:id="@+id/like"
            android:layout_row="0"
            android:layout_toRightOf="@+id/likeb"
            android:textSize="12pt" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:background="#000000"
        android:id="@+id/gridLayout2">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:id="@+id/imageButton1"
            android:layout_marginLeft="4dp"
            android:background="@drawable/rupeesymbol"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:layout_column="0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="115"
            android:id="@+id/tv"
            android:layout_row="0"
            android:layout_column="1" />
    </LinearLayout>


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/gridLayout2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="frhgvfgvjfjext"
        android:id="@+id/tv2"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/plus"
        android:background="@drawable/ic_add_circle_24dp"
        android:layout_alignTop="@+id/tv2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<TextView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:id="@+id/addM"
    android:textColor="#ff00ff"
    android:textSize="15pt"
    android:layout_alignTop="@+id/tv2"
    android:layout_toRightOf="@+id/plus" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/minus"
        android:visibility="gone"
        android:background="@drawable/ic_remove_circle_24dp"
        android:layout_alignTop="@+id/tv2"
        android:layout_toRightOf="@+id/addM" />
</RelativeLayout>
</RelativeLayout>
